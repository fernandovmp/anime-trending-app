<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AnimeTrendingApp.Views.AnimePage"
             Title="{Binding CanonicalTitle}"
             BackgroundColor="WhiteSmoke"
             >
    <ScrollView>
        <StackLayout>
            <Frame>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image
                        Source="{Binding PosterImage.Large}"
                     />
                    <ContentView
                        Grid.Column="1"
                        Grid.RowSpan="2"
                        Margin="10, 0"
                    >
                        <StackLayout
                            Orientation="Vertical"
                        >
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span 
                                            Text="{Binding CanonicalTitle}"
                                            TextColor="Black"
                                            FontSize="Title"
                                        />
                                        <Span
                                            Text="{Binding StartDate, StringFormat='  {0:yyyy}'}"
                                            FontSize="Medium"
                                        />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label
                                Text="{Binding AverageRating, StringFormat='{0}% community approval'}"
                                TextColor="LimeGreen"
                                FontSize="Medium"
                            />
                            <FlexLayout
                                Direction="Row"
                            >
                                <Grid FlexLayout.Grow="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                    </Grid.RowDefinitions>
                                    <StackLayout
                                        Orientation="Horizontal"
                                    >
                                        <Image Source="heart"/>
                                        <Label
                                            FontSize="Small"
                                            Text="{Binding PopularityRank, StringFormat='#{0}'}"
                                        />
                                    </StackLayout>
                                    <Label
                                        Grid.Row="1"
                                        FontSize="Small"
                                        Text="most popular"
                                    />
                                </Grid>

                                <Grid FlexLayout.Grow="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                    </Grid.RowDefinitions>
                                    <StackLayout
                                        Orientation="Horizontal"
                                    >
                                        <Image Source="star"/>
                                        <Label
                                            FontSize="Small"
                                            Text="{Binding RatingRank, StringFormat='#{0}'}"
                                        />
                                    </StackLayout>
                                    <Label
                                        Grid.Row="1"
                                        FontSize="Small"
                                        Text="highest rated"
                                    />
                                </Grid>
                            </FlexLayout>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            Text="Episodes  "
                                            TextColor="Black"
                                            FontSize="Medium"
                                            FontAttributes="Bold"
                                        />
                                        <Span 
                                            Text="{Binding EpisodeCount, TargetNullValue='-'}"
                                            FontSize="Medium"
                                            TextColor="SlateGray"
                                        />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            Text="Status    "
                                            FontSize="Medium"
                                            TextColor="Black"
                                            FontAttributes="Bold"
                                        />
                                        <Span 
                                            Text="{Binding Status}"
                                            TextColor="SlateGray"
                                            FontSize="Medium"
                                        />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                    </ContentView>
                </Grid>
            </Frame>
            <Frame
                Margin="20"
                CornerRadius="5"
            >
                <FlexLayout
                    Direction="Column"
                >
                    <Label
                        Text="Synopsis"
                        FontSize="Medium"
                        TextColor="Black"
                        FontAttributes="Bold"
                    />
                    <Label
                        Text="{Binding Synopsis}"
                        FontSize="Medium"
                        TextColor="Black"
                    />
                </FlexLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
